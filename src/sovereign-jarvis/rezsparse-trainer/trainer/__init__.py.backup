    @staticmethod
    def check_git_repo():
        """Check if git repo has training files"""
        import subprocess
        try:
            result = subprocess.run(
                ["git", "ls-remote", "git@github.com:alchemyflownode/rezsparse-sovereign-ai.git"],
                capture_output=True,
                text=True
            )
            return "constitutional" in result.stdout.lower()
        except:
            return False

