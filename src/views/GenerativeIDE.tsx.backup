/**
 * Generative IDE - Zero Drift AI Development Environment
 */

import React, { useState, useEffect } from 'react';
import { zeroDriftAI } from '../services/zero-drift-ai';
import { FoundationBuilder } from '../components/FoundationBuilder';
import { Send, Zap, Lock, Unlock, Shield, Code } from 'lucide-react';

export const GenerativeIDE = () => {
  const [input, setInput] = useState('');
  const [output, setOutput] = useState('');
  const [compliance, setCompliance] = useState(100);
  const [isLocked, setIsLocked] = useState(false);
  const [foundation, setFoundation] = useState(zeroDriftAI.getFoundation());

  const handleGenerate = async () => {
    if (!input.trim()) return;
    
    try {
      const code = await zeroDriftAI.generate(input);
      const result = zeroDriftAI.curate(code);
      
      setOutput(result.correctedCode || code);
      setCompliance(result.compliance);
      
      if (result.drift) {
        console.warn('Zero Drift violation detected:', result.violations);
      }
    } catch (error) {
      setOutput(`Error: ${error instanceof Error ? error.message : 'Unknown error'}`);
    }
  };

  const handleLock = () => {
    zeroDriftAI.setEnabled(true);
    setIsLocked(true);
  };

  const handleUnlock = () => {
    zeroDriftAI.setEnabled(false);
    setIsLocked(false);
  };

  return (
    <div className="p-6 space-y-6">
      <div className="flex justify-between items-center">
        <h2 className="text-2xl font-bold flex items-center gap-2">
          <Zap className="text-yellow-400" />
          Generative IDE <span className="text-sm bg-gray-800 px-2 py-1 rounded">Zero Drift Active</span>
        </h2>
        <div className="flex gap-2">
          {isLocked ? (
            <button 
              onClick={handleUnlock}
              className="flex items-center gap-1 px-3 py-1.5 bg-yellow-500/20 text-yellow-400 rounded border border-yellow-500/30"
            >
              <Unlock size={14} /> Unlock
            </button>
          ) : (
            <button 
              onClick={handleLock}
              className="flex items-center gap-1 px-3 py-1.5 bg-green-500/20 text-green-400 rounded border border-green-500/30"
            >
              <Lock size={14} /> Lock
            </button>
          )}
        </div>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div className="lg:col-span-2 space-y-4">
          <div>
            <label className="block text-sm text-gray-400 mb-1">Prompt</label>
            <textarea
              value={input}
              onChange={(e) => setInput(e.target.value)}
              placeholder="Describe what you want to generate..."
              className="w-full h-32 bg-gray-900 border border-gray-700 rounded-lg p-3 text-white"
            />
          </div>
          <button
            onClick={handleGenerate}
            className="px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-500 rounded-lg font-medium"
          >
            Generate with Zero Drift
          </button>
          <div>
            <label className="block text-sm text-gray-400 mb-1">Output</label>
            <pre className="bg-gray-900 border border-gray-700 rounded-lg p-4 max-h-96 overflow-auto">
              {output || '// Output will appear here...'}
            </pre>
          </div>
        </div>
        
        <div className="space-y-4">
          <FoundationBuilder
            foundation={foundation}
            onChange={setFoundation}
            onLock={handleLock}
            onUnlock={handleUnlock}
          />
          
          <div className="bg-gray-900/50 border border-gray-700/50 rounded-xl p-4">
            <h3 className="font-medium flex items-center gap-2 mb-2">
              <Shield size={16} />
              Compliance
            </h3>
            <div className="text-2xl font-bold">
              {compliance}% <span className={compliance === 100 ? 'text-green-400' : 'text-yellow-400'}>
                {compliance === 100 ? '✅' : '⚠️'}
              </span>
            </div>
            <p className="text-sm text-gray-400 mt-1">
              {zeroDriftAI.getComplianceMessage({ compliance, drift: compliance < 100 } as any)}
            </p>
          </div>
        </div>
      </div>
    </div>
  );
};

export default GenerativeIDE;


