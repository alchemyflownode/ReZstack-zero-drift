// ULTRA SIMPLE main.tsx - NO ERRORS
console.log("🚀 RezStack starting...");

// First, make sure React is loaded
import React from 'react';
import ReactDOM from 'react-dom/client';

// Clear any existing content
const rootElement = document.getElementById('root');
if (!rootElement) {
  document.body.innerHTML = '<h1 style="color: red; padding: 40px;">ERROR: No #root element in index.html</h1>';
  throw new Error('No root element');
}

// Clear it
rootElement.innerHTML = '';

// Create React root
const root = ReactDOM.createRoot(rootElement);

// SIMPLE App component (no imports)
function SimpleApp() {
  return React.createElement('div', {
    style: {
      backgroundColor: '#0a0a0f',
      color: 'white',
      height: '100vh',
      padding: '40px',
      display: 'flex',
      flexDirection: 'column',
      alignItems: 'center',
      justifyContent: 'center'
    }
  }, [
    React.createElement('h1', {
      key: 'title',
      style: {
        color: '#8b5cf6',
        fontSize: '3rem',
        marginBottom: '20px'
      }
    }, 'RezStack AI 🚀'),
    React.createElement('p', {
      key: 'subtitle',
      style: { fontSize: '1.2rem', marginBottom: '30px' }
    }, 'React is working! No import errors.'),
    React.createElement('button', {
      key: 'button',
      onClick: () => alert('React is working perfectly!'),
      style: {
        background: 'linear-gradient(90deg, #4f46e5, #8b5cf6)',
        color: 'white',
        border: 'none',
        padding: '12px 24px',
        borderRadius: '8px',
        fontSize: '1rem',
        cursor: 'pointer'
      }
    }, 'Test Click')
  ]);
}

// Render
try {
  console.log("🎯 Rendering React app...");
  root.render(React.createElement(React.StrictMode, null, 
    React.createElement(SimpleApp)
  ));
  console.log("✅ React app rendered successfully!");
} catch (error) {
  console.error("❌ Render failed:", error);
  
  // Show error on screen
  rootElement.innerHTML = \`
    <div style="
      background: #0a0a0f;
      color: white;
      padding: 40px;
      height: 100vh;
    ">
      <h1 style="color: #ef4444;">Render Error</h1>
      <pre style="background: #1e1e2e; padding: 20px; border-radius: 8px;">
        \${error instanceof Error ? error.stack : String(error)}
      </pre>
      <button onclick="location.reload()" style="
        background: #8b5cf6;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        margin-top: 20px;
        cursor: pointer;
      ">
        Reload Page
      </button>
    </div>
  \`;
}