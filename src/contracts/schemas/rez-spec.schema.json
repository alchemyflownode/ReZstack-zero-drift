{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RezSpec",
  "description": "Architectural constitution for Zero Drift AI",
  "type": "object",
  "required": ["id", "version", "constraints", "capabilityBudget", "technicalSpec", "signature"],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "version": { "type": "string" },
    "constraints": {
      "type": "object",
      "required": ["required", "forbidden", "bounds"],
      "properties": {
        "required": { "type": "array", "items": { "type": "string" } },
        "forbidden": { "type": "array", "items": { "type": "string" } },
        "bounds": {
          "type": "object",
          "required": ["maxLinesPerFile", "maxFiles"],
          "properties": {
            "maxLinesPerFile": { "type": "integer", "minimum": 1 },
            "maxFiles": { "type": "integer", "minimum": 1 },
            "maxCyclomaticComplexity": { "type": "integer", "maximum": 10 }
          }
        }
      }
    },
    "capabilityBudget": {
      "type": "object",
      "required": ["tokens", "files", "operations"],
      "properties": {
        "tokens": { "type": "integer", "maximum": 128000 },
        "files": { "type": "integer" },
        "operations": {
          "type": "array",
          "items": { "enum": ["create-component", "edit-logic", "refactor", "delete"] }
        }
      }
    },
    "technicalSpec": {
      "type": "object",
      "required": ["generationTarget"],
      "properties": {
        "generationTarget": { "enum": ["component", "hook", "service", "full-page"] }
      }
    },
    "signature": {
      "type": "object",
      "required": ["createdAt", "checksum", "author"],
      "properties": {
        "createdAt": { "type": "string", "format": "date-time" },
        "checksum": { "type": "string" },
        "author": { "type": "string" }
      }
    }
  }
}